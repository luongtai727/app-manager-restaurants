<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="380dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:background="#FF9800"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTenMonGC"
            android:text="Topping, ghi chú"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imguot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_close_24" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textMultiLine"
             />
        <TextView
            android:id="@+id/btnXoa"
            android:text="Xoá"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <Button
        android:text="Tất cả"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_tatca"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recTopic"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnphay"
            android:text=","
            android:textColor="@color/white"
            android:background="#8BC34A"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btnxuongdong"
            android:text=","
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:background="#FFC107"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btndongyGC"
            android:text="Đồng ý"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:background="#9C27B0"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>