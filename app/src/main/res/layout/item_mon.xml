<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="250dp"
    cardUseCompatPadding="true"
    app:cardElevation="9dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgMon"
            android:scaleType="fitXY"
            android:src="@drawable/monan"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="130dp"/>

        <TextView
            android:id="@+id/txtTenMonAn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="asdasdasdasdas"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtChiTietMon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="asdasdasdsada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="167dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtGiaMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="150,000d"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="58dp"
                android:layout_height="45dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_baseline_add_circle_24" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>